<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dip"
    android:paddingRight="20dip" >

    <LinearLayout
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_bg"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="订单号:"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/order"
                android:layout_width="150dip"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="请输入单号"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_4c4c4c"
                android:textSize="14sp" />
            <!--  android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ-_." -->
           <Button
                android:id="@+id/research"
                android:layout_width="50dip"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/wancheng_button_selector"
                android:gravity="center"
                android:text="查询"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="商家快递:"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/drapdownlist"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:entries="@array/degrees"
                android:prompt="@string/degrees_prompt"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/is_take"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="是否收取费用:"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />

            <Button
                android:id="@+id/yes"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="是"
                android:padding="0dip"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/no"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:text="否"
                android:padding="0dip"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="金额"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:hint="请输入金额"
                android:numeric="integer"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="备注:"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:lines="2"
                android:hint=""
                android:text=""
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/over_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wancheng_select"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>