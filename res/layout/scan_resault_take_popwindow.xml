<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dip"
     android:background="@null"
    android:paddingRight="20dip"
    android:orientation="vertical" >
    
   <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_bg"
        android:orientation="vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/take_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="1293892138921"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/enterprise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="申通快递"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/is_take"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="是否收取费用:"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />

            <Button
                android:id="@+id/yes"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="是"
                 android:padding="0dip"
                android:textColor="@color/text_4c4c4c"
                android:textSize="14sp" />

            <Button
                android:id="@+id/no"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:text="否"
                android:padding="0dip"
                android:textColor="@color/text_4c4c4c"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="金额:"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/cargo_price"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_marginLeft="15dp"
                android:text="@null"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:hint="请输入金额"
                android:background="@null"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="备注:"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/note"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text=""
                android:textSize="16sp"
                android:background="@null" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/view_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
               
                android:background="@drawable/wancheng_button_selector"
                android:gravity="center"
                android:text="下一个"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/wancheng_select"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/text_4c4c4c"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
     
</LinearLayout>