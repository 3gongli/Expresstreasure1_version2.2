<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="notitle">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="main_tab_bottom_meijuan">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/top_scan_text_selector</item>
        <item name="android:background">@drawable/top_button_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/top_scan_text_selector</item>
        <item name="android:background">@drawable/bottom_button_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Dialog_Fullscreen"> 

      <item name="android:windowFullscreen">true</item> 

      <item name="android:windowNoTitle">true</item>  

    </style>  

    <!-- <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">

        API 14 theme customizations can go here.
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:windowTitleBackgroundStyle">@android:color/white</item>
    </style> -->
    
    
    

</resources>